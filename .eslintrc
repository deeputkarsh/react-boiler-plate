{
  "parser": "babel-eslint",
   "extends": ["standard", "standard-jsx", "prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
"parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "rules": {
        "semi": "error",
        "eqeqeq": ["error", "smart"],
        "no-debugger": "off",
        "jsx-quotes": ["error", "prefer-single"]
    }
}
